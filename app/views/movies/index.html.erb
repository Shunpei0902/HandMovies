<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        All List
      </h1>
    </div>
  </div>
</section>

<div class="columns is-centered">
    <div class="column is-half">
      <div class="field">
        <div class="control">
<%= form_with url: movies_path, method: :get do |form| %>
  <%= form.text_field :search, placeholder: "キーワードを入力" %>
  <%= form.submit "検索" %>
<% end %>

</div>
      </div>
    <% if @movies.any? %>
  <h2>Search Results:</h2>
  <ul>
    <% @movies.each do |movie| %>
      <li><%= link_to movie.title, movie %></li>
    <% end %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>

<table>
<thead>
<tr>
  <th>Title</th>
  <th>Introduction</th>
  <th colspan="20"></th>
</tr>
</thead>

  <tbody>
      <h2>Search Results:</h2>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.introduction %></td>
          <td><%= link_to 'Show', movie, class: "button is-light"%></td> 
        </tr>
      <% end %>
  </tbody>
</table>

<br>
